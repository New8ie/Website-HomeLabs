---
import DefaultLayout from "../layouts/Default.astro";
import  "../styles/global.css";
---

<DefaultLayout>
  <section class="min-h-screen flex flex-col items-center justify-center bg-zinc-950 text-zinc-100 px-4 text-center">
    <h1 class="text-6xl md:text-8xl font-cinzel text-yellow-400 drop-shadow-[0_2px_8px_gold] mb-4">
      404
    </h1>
    <p class="text-lg md:text-xl font-inter text-zinc-400 mb-6">
      Halaman yang kamu cari tidak ditemukan.
    </p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-yellow-400 text-zinc-900 font-semibold rounded shadow-md hover:bg-yellow-300 transition"
    >
      Kembali ke Beranda
    </a>
  </section>
</DefaultLayout>
