---
// Import
import "../../styles/global.css";
import DefaultLayout from "../../layouts/Default.astro";
import { HeaderSection } from "../../sections/Header";
import { Footer } from "../../sections/Footer";
import { getCollection } from "astro:content";

// Ambil & urutkan data
const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<DefaultLayout title="Blog - HomeLabs">
  <HeaderSection />

  <!-- Wrapper dengan background image -->
  <div
    class="relative isolate bg-cover bg-center bg-no-repeat before:absolute before:inset-0 before:bg-black/60 before:backdrop-blur-sm before:z-0"
    style="background-image: url('/assets/images/home-bg-2.jpg');"
  >
    <!-- Main Content -->
    <main
      class="relative z-10 max-w-3xl mx-auto px-4 py-20 space-y-12 text-white"
    >
      <h1 class="text-4xl font-bold mb-8 drop-shadow-xl text-yellow-400">
        Blog Posts
      </h1>
      <ul class="space-y-8">
        {
          posts.map((post) => (
            <li>
              <a
                href={`/blog/${post.slug}`}
                class="block group transition duration-300 hover:scale-[1.01]"
              >
                <h2 class="text-2xl font-bold text-yellow-400 group-hover:underline drop-shadow-lg">  
                  {post.data.title}
                </h2>
                <p class="text-sm text-gray-300 mb-1">
                  {new Date(post.data.pubDate).toLocaleDateString("id-ID", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </p>
                <p class="text-gray-300">{post.data.description}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>

    <Footer />
  </div>
</DefaultLayout>
