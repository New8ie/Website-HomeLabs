---
import "../../styles/global.css";
import DefaultLayout from "../../layouts/Default.astro";
import { HeaderSection } from "../../sections/Header";
import { Footer } from "../../sections/Footer";
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---
<DefaultLayout title="Blog - HomeLabs">
  <HeaderSection />

  <main class="max-w-3xl mx-auto px-4 py-12 space-y-12">
    <h1 class="text-4xl font-bold mb-8">Blog Posts</h1>
    <ul class="space-y-8">
      {posts.map(post => (
        <li>
          <a href={`/blog/${post.slug}`} class="block group">
            <h2 class="text-2xl font-bold text-white group-hover:underline">
              {post.data.title}
            </h2>
            <p class="text-sm text-gray-400 mb-1">
              {new Date(post.data.pubDate).toLocaleDateString("id-ID", { year: 'numeric', month: 'long', day: 'numeric' })}
            </p>
            <p class="text-gray-300">{post.data.description}</p>
          </a>
        </li>
      ))}
    </ul>
  </main>

  <Footer />
</DefaultLayout>
