---

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  category: string;
  author?: {
    name: string;
    title: string;
    image?: string;
  };
}
const { title, description, pubDate, category, author } = Astro.props;
---

<article class="max-w-3xl mx-auto py-12 px-4 text-wowGold">
  <header class="mb-8 border-b border-wowGold/30 pb-5">
    <h1 class="text-4xl font-extrabold tracking-tight leading-tight text-wowGold drop-shadow-md font-inter">
      {title}
    </h1>
    <p class="text-lg text-gray-300 mb-10 font-cinzel">{description}</p>
    <p class="mt-2 text-sm text-gray-400 font-inter">
      Dipublikasikan pada{" "}
      <time datetime={pubDate.toISOString()}>
        {new Date(pubDate).toLocaleDateString("id-ID", {
          year: "numeric",
          month: "long",
          day: "numeric",
        })}
      </time>{" "}
      â€¢ Kategori:{" "}
      <span class="inline-block bg-wowGold/10 px-2 py-1 text-xs font-medium rounded">
        {category}
      </span>
    </p>
  </header>

  {author && (
    <div class="flex items-center gap-4 mb-10">
      {author.image && (
        <img
          src={author.image}
          alt={author.name}
          class="w-12 h-12 rounded-full border-2 border-wowGold shadow-md"
        />
      )}
      <div>
        <p class="text-sm font-semibold text-wowGold font-inter">{author.name}</p>
        <p class="text-xs text-gray-400 italic font-inter">{author.title}</p>
      </div>
    </div>
  )}

  <!-- Slot konten utama artikel -->
  <div class="prose prose-invert prose-lg text-gray-100 font-cinzel">
    <slot />
  </div>
</article>
